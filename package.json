{
  "name": "Wikilogic",
  "version": "0.4.1",
  "author": "The Wikilogic Foundation [Iain J McCallum, ...]",
  "licence": "MIT",
  "main": "./server/server.js",
  "private": true,
  "engine": {
    "node": "4.4.5",
    "npm": "3.9.3"
  },
  "scripts": {
    "preinstall": "npm install -g gulp && npm install -g jshint",
    "start": "echo \"Starting WikiLogic\"",
    "start:dev": "npm run spinup & npm run watch",
    "compile": "npm run compile:clean && npm run compile:es6 && npm run compile:sass",
    "compile:clean": "rimraf static/js/* & rimraf static/css/*",
    "compile:es6": "browserify staticSrc/es6/main.js | uglifyjs -mc > static/js/main.bundle.js",
    "compile:sass": "gulp sass",
    "test": "mocha ./test -u bdd -R spec",
    "spinup": "npm run spinup:database & npm run spinup:server",
    "spinup:database": "start cmd /k mongod",
    "spinup:server": "start cmd /k nodemon --ignore editor ./server/server.js",
    "watch": "npm run watch:es6",
    "watch:lint": "watch 'jshint staticSrc/es6/' staticSrc/es6/*.js",
    "watch:es6": "watchify staticSrc/es6/main.js -o static/js/main.bundle.js -dv",
    "watch:test": "npm run test -- --watch -R min"
  },
  "jshintConfig": {
    "esnext": true
  },
  "dependencies": {
    "async": "^1.2.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "~1.12.0",
    "cookie-parser": "^1.3.4",
    "debug": "~2.1.1",
    "express": "~4.12.2",
    "express-handlebars": "^2.0.1",
    "express-session": "^1.11.2",
    "gravatar": "^1.1.1",
    "jquery": "^2.2.4",
    "mongoose": "^4.0.3",
    "morgan": "^1.5.3",
    "nodemon": "^1.9.2",
    "passport": "^0.2.1",
    "passport-facebook": "^2.0.0",
    "passport-google-oauth": "^0.2.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.3"
  },
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-css-globbing": "^0.1.8",
    "gulp-sass": "^2.3.1",
    "gulp-util": "^3.0.7",
    "jasmine-core": "^2.4.1",
    "jshint": "^2.9.2",
    "mocha": "^2.5.3",
    "rimraf": "^2.5.2",
    "sass-glob-importer": "^1.0.1",
    "script-loader": "^0.7.0",
    "should": "^9.0.0",
    "uglifyjs": "^2.4.10",
    "watch": "^0.18.0",
    "watchify": "^3.7.0"
  }
}
