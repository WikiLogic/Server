{
  "name": "Wikilogic",
  "version": "0.4.1",
  "main": "./server/server.js",
  "private": true,
  "engine": {
    "node": "4.4.5"
  },
  "scripts": {
    "build": "npm run compile",
    "start": "echo \"Starting WikiLogic\"",
    "start:dev": "npm run clean && npm run compile && npm run watch | mongod | node ./server/server.js | start chrome /new-tab http://localhost:3000",
    "pretest": "run npm lint",
    "test": "mocha ./editor/test -u bdd -R spec",
    "lint": "jshint **/*.js",
    "watch": "gulp watch",
    "compile": "npm run compile:es6 && npm run compile:sass",
    "compile:es6": "browserify editor/src/js/main.js | uglifyjs -mc > editor/dist/js/main.bundle.js",
    "compile:sass": "gulp sass",
    "clean": "rimraf editor/dist/js/* & rimraf editor/dist/css/*"
  },
  "jshintConfig": {
    "esnext": true
  },
  "licence": "MIT",
  "author": "Iain J McCallum",
  "dependencies": {
    "async": "^1.2.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "~1.12.0",
    "cookie-parser": "^1.3.4",
    "debug": "~2.1.1",
    "express": "~4.12.2",
    "express-handlebars": "^2.0.1",
    "express-session": "^1.11.2",
    "gravatar": "^1.1.1",
    "jquery": "^2.2.4",
    "mongoose": "^4.0.3",
    "morgan": "^1.5.3",
    "passport": "^0.2.1",
    "passport-facebook": "^2.0.0",
    "passport-google-oauth": "^0.2.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.3"
  },
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.0",
    "gulp-css-globbing": "^0.1.8",
    "gulp-sass": "^2.3.1",
    "gulp-util": "^3.0.7",
    "jasmine-core": "^2.4.1",
    "jshint": "^2.9.2",
    "mocha": "^2.5.3",
    "nodemon": "^1.9.2",
    "rimraf": "^2.5.2",
    "sass-glob-importer": "^1.0.1",
    "script-loader": "^0.7.0",
    "should": "^9.0.0",
    "uglifyjs": "^2.4.10"
  }
}
