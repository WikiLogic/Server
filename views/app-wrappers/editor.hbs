<div ng-app="Editor" id="editor-app">
	<div class="app-rap">

		{{!-- These partials are called from views/common, they're here so that they get caught under the control of ng-app --}}
		<div class="header">
			{{> header-content }} 
		</div>

		<div class="body">

			<div class="sidebar-left">
				{{> sidebar-left-content }}
			</div>

			<div class="main editor">

				<div ng-controller="MyProfileController" class="main__head">
					<!-- This might need to eb split out too -->
					<h1>The Editor.</h1>
					<img src="{{user.meta.gravatar}}?s=40" alt="">
					
				</div>

				<!-- Client side Views / routes set up in editor-app.js -->
				<div class="main__body" ng-view>

				</div>

			</div>

			<div class="sidebar-right">
				{{> sidebar-right-content }}
			</div>

		</div>

		<div class="footer">
			{{> footer-content }}
		</div>

	</div> <!-- END of app-rap -->

	<!-- This will hook in and display any search results. It is free to be moved around by any controller for it's needs. It acts kind of like intellisense, but for claims -->
	<div class="searchResults" ng-controller="SearchBoxController">
		 <div class="searchResults__result" ng-repeat="draft in rootScope.search.draftResults">
		 	<p>{{draft.description}}</p>
		 </div>
		 <div class="searchResults__result" ng-repeat="claim in search.results">
		 	<p>{{claim.description}}</p>
		 </div>
	</div>
	

</div> <!-- END of ng-app="Editor" -->

